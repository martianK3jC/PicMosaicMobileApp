<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/halfrounded_rectangle"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:paddingHorizontal="20dp">

                <ImageButton
                    android:id="@+id/arrow_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/arrow_back"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:text="Profile"
                    android:textSize="30sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/white"
                    android:gravity="center"/>

                <ImageButton
                    android:id="@+id/settings_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/light_settings_icon"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/default_profile"
                    />

                <ImageButton
                    android:id="@+id/edit_profile_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@id/profile_image"
                    android:layout_alignBottom="@id/profile_image"
                    android:background="@drawable/circle_background"
                    android:src="@drawable/edit_icon_button"
                    android:padding="8dp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="User's name"
                android:textSize="24sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/white"
                />

            <Button
                android:id="@+id/edit_profile_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Edit Profile"
                android:textAllCaps="false"
                android:background="@android:color/transparent"
                android:textColor="@color/white"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="15dp"
                android:padding="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profile_first_name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semi_bold"
                        android:text="First Name"
                        />

                    <TextView
                        android:id="@+id/profile_first_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="#827E7E"
                        android:textSize="14sp"
                        android:text="First name"
                        android:fontFamily="@font/poppins_light"
                        android:visibility="visible"
                        />

                    <EditText
                        android:id="@+id/profile_first_name_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="#827E7E"
                        android:hint="First name"
                        android:fontFamily="@font/poppins_light"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:scaleX="@integer/material_motion_duration_long_1"
                        android:src="@drawable/gray_line"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Last Name"
                        android:fontFamily="@font/poppins_semi_bold"
                        />

                    <TextView
                        android:id="@+id/profile_last_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="#827E7E"
                        android:fontFamily="@font/poppins_light"
                        android:text="Last name"
                        android:textSize="14sp"
                        android:visibility="visible"
                        />

                    <EditText
                        android:id="@+id/profile_last_name_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="#827E7E"
                        android:hint="Last name"
                        android:fontFamily="@font/poppins_light"
                        android:background="@android:color/transparent"
                        android:inputType="textPersonName"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:scaleX="@integer/material_motion_duration_long_1"
                        android:src="@drawable/gray_line"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Phone Number"
                        android:fontFamily="@font/poppins_semi_bold"
                        />

                    <TextView
                        android:id="@+id/profile_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="#827E7E"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="14sp"
                        android:text="Phone number"
                        android:visibility="visible"
                        />

                    <EditText
                        android:id="@+id/profile_phone_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="#827E7E"
                        android:hint="+63"
                        android:fontFamily="@font/poppins_light"
                        android:background="@android:color/transparent"
                        android:inputType="phone"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:scaleX="@integer/material_motion_duration_long_1"
                        android:src="@drawable/gray_line"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Address"
                        android:fontFamily="@font/poppins_semi_bold"
                        />

                    <TextView
                        android:id="@+id/profile_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="#827E7E"
                        android:fontFamily="@font/poppins_light"
                        android:text="Address"
                        android:textSize="14sp"
                        android:visibility="visible"
                        />

                    <EditText
                        android:id="@+id/profile_address_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="#827E7E"
                        android:hint="Address"
                        android:fontFamily="@font/poppins_light"
                        android:background="@android:color/transparent"
                        android:inputType="textPostalAddress"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:scaleX="@integer/material_motion_duration_long_1"
                        android:src="@drawable/gray_line"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Email"
                        android:fontFamily="@font/poppins_semi_bold"
                        />

                    <TextView
                        android:id="@+id/profile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="14sp"
                        android:padding="5dp"
                        android:textColor="#827E7E"
                        android:fontFamily="@font/poppins_light"
                        android:text="Email"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:scaleX="@integer/material_motion_duration_long_1"
                        android:src="@drawable/gray_line"
                        />

                    <LinearLayout
                        android:id="@+id/save_cancel_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:visibility="gone">



                        <Button
                            android:id="@+id/save_button"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@android:color/white"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="90dp"
                            android:layout_marginLeft="90dp"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:backgroundTint="#48A6A7"
                            app:cornerRadius="12dp"
                            android:text="Save Changes"
                            />

                        <Button
                            android:id="@+id/cancel_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cancel"
                            android:layout_marginStart="8dp"
                            android:background="@android:color/transparent"
                            android:textColor="@android:color/white"
                            />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="City"
                        android:fontFamily="@font/poppins_semi_bold"
                        />

                    <TextView
                        android:id="@+id/profile_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="#827E7E"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="14sp"
                        android:text="City"
                        android:visibility="visible"
                        />

                    <EditText
                        android:id="@+id/profile_city_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:textColor="#827E7E"
                        android:hint="City"
                        android:fontFamily="@font/poppins_light"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:visibility="gone"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:scaleX="@integer/material_motion_duration_long_1"
                        android:src="@drawable/gray_line"
                        />

                    <Button
                        android:id="@+id/logout_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="90dp"
                        android:layout_marginLeft="90dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:backgroundTint="#48A6A7"
                        app:cornerRadius="12dp"
                        android:text="Log Out"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>